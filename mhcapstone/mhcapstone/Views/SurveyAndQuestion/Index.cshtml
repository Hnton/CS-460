@model IEnumerable<mhcapstone.Models.ViewModels.SurveyAndQuestion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Questions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveysId)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveysId)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.SurveysId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SurveysId">Details</a> |
