@model mhcapstone.Models.SurveyInfo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SurveyInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Questions" class="control-label"></label>
                <input asp-for="Questions" readonly="readonly" class="form-control" />
                <span asp-validation-for="Questions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answers" class="control-label"></label>
                <input asp-for="Answers" class="form-control" />
                <span asp-validation-for="Answers" class="text-danger"></span>
            </div>
            <div  class="form-group" >
                @*<label asp-for="SurveysId" class="control-label"></label>*@
                <input type="hidden" asp-for="SurveysId" class="form-control" />
                <span asp-validation-for="SurveysId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                @*<label asp-for="TimeStamp" class="control-label"></label>*@
                <input type="hidden" asp-for="TimeStamp" class="form-control" />
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
